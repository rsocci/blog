<div class="page=header">
	<h1>Posts</h1>
</div>

<table class="table table-bordered table-hover">
	<% @posts.each do |post| %>
		<tr class="row">
			<td><%= link_to post.title, post %></td>
			<td><%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are you sure you want to delete this post?'} %></td>
		</tr>
	<% end %>

</table>
<%= button_to "New Post", new_post_path, method: :get, class: 'btn' %>
<%= paginate @posts %>