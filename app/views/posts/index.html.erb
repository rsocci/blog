<div class="page-header">
	<h1>Posts</h1>
</div>

<table class="table table-striped table-hover">
	<% @posts.each do |post| %>
		<div class="blog_post">
			<div class="post_title">
				<%= link_to post.title, post %>
				<span class="post_config"><%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are you sure you want to delete this post?'} %></span>
				<span class="post_config"><%= link_to 'Edit', edit_post_path(post.id), method: :get %></span>
			</div>
			<p class="post_info"><%= (post.created_at).strftime("%B %e, %Y") + ' - ' + post.author %></p>
			<hr>
		</div>
	<% end %>

</table>
<%= button_to "New Post", new_post_path, method: :get, class: 'btn' %>
<%= paginate @posts %>