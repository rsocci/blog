<div class="page=header">
	<h1><%= @post.title %></h1>
	<h5>by <%= @post.author %></h5>
</div>


<div class="content">
	<%= @post.content %>
</div>

<%= button_to 'Edit', edit_post_path(@post.id), method: :get, class: 'btn' %>

<h3 id="comment">Comment</h3>
<%= form_for [@post, @comment] do |f| %>
	<%= f.text_area :content %>
	<%= f.submit 'Submit' %>
<% end %>
