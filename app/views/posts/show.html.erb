<div class="page=header">
	<h1><%= @post.title %></h1>
	<h5>by <%= @post.author %></h5>
</div>


<div class="content">
	<%= @post.content %>
</div>

<%= button_to 'Edit', edit_post_path(@post.id), method: :get, class: 'btn' %>

<h3 id="comment">Comment</h3>
<%= form_for [@post, @comment] do |f| %>
	<% if @comment.errors.any? %>
		<h3>Errors:</h3>
		<ul>
			<% @comment.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>	
			<% end %>
		</ul>
	<% end %>
	
	<%= f.text_area :content %>
	<%= f.submit 'Submit' %>
<% end %>

<% @comments.each do |c| %>
	<% if c.post_id == @post.id %>
		<div class="comment">
			<h6><%= c.content %></h6>
			<p>submitted <%= time_ago_in_words(c.created_at) + ' ago' %></p>
		</div>
	<% end %>
<% end %>

